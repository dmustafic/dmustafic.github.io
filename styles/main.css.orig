*::-webkit-scrollbar {
 display: none;
}

body{
    margin: 0;
    padding: 0;
    width: 768px;
}


#main-container{
    width: 100%;
    height: 100%;    
    background: #333;
        
    background-size: 768px 470px;
    color: white;
    z-index: 0;
}


.screen{
    width: 100%;
    height: 100%; 
    background: url('../images/background.png') no-repeat;
    background-size: 100%;
    position: absolute;
    z-index: 0;
    overflow: hidden;
}
.screen:after {
    content: "";
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      height: 100%; 
      width: 100%;
      z-index: 1;
      background-color: rgba(0,0,0,0.85);
}

.content{
    position: relative;
    z-index: 10;
    height: 100%;
    width: 100%;
}

#view-container{
    height: 410px;
    position: relative;
}

hr{

    border-top: 1px dashed #999;
    margin-top: 10px;
    margin-bottom: 10px;
}

/* OVERVIEW
-------------------------------*/
.car-details{
    /*height: 370px; */  
}

/* SERVICES
-------------------------------*/
.slide-title{
    text-align: left;
    
}

.slide-title .title{
    margin-bottom: 60px;   
}

.plan-tile h2{
    margin-top: 0;
    font-style: oblique;
}

.plan-tile span{/*
    font-style: italic;
    color: #ccc;*/
}

.plan-tile p{
    margin-bottom: 20px;
}

.plan-tile .btn {
    min-width: 100%;
}

#plans-carousel-container{
    height: 300px;
}

#plans-carousel-container .row{
    padding: 0px 50px;
}


/* PLAN-DETAILS
-------------------------------*/

.plan-details{
    height: 240px; 
    margin-bottom: 20px;
}

.plan-details .carousel-indicators{
    display: none;
    
}


.included-services,
.included-apps,
.plan-description{

    text-align: left;
    padding: 0px 50px;
    
    
}

.plan-description{
    margin-top: 40px;   
}

.included-services ul,
.included-apps ul{
    
        display: flex;
    flex-wrap: wrap;
    flex-direction: column;   
    
    height: 180px;
    list-style:square;
}

.included-apps ul{
    list-style: none;
    padding-left: 20px;
}

.included-apps ul li{
    margin-bottom: 5px;   
}

.included-apps .app-icon{
    display: inline-block;
    width: 30px;
    height: 30px;
    margin-right: 10px;
    
    
}

.included-apps .app-icon img {
    width: 30px;
    height: 30px;
}


/* SUMMARY PAGE
-------------------------------*/
.summary-table,
.services-table{
    width: 100%;   
}

.summary-table .price,
.services-table .price{
    text-align: right;
    width: 80px;
}

.services-table .remove{
    text-align: right;
}

.services-table .remove a{
    color: #aaa;
}

.purchase{
    display: flex;
    justify-content: flex-start;
    align-items: baseline;
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 20px 30px;
    
    
}
.purchase *{
    margin-right: 20px;
}

.purchase .total,
.purchase .billed-to{
    margin-left: 20px;   
}

.purchase .billed-to{
    color: #aaa;
}

/* PROFILE
-------------------------------*/

.profile-picture{
    display: inline;
    width: 50px;
    border-radius: 100%;
}

/* BILLING
-------------------------------*/
.billing-details{
    height: 260px;   
}


/* SETTINGS
-------------------------------*/
.settings-container{
    padding: 20px 24px;   
    height: 340px;
    overflow-y: auto;
}

.settings-item{
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 0;
    margin-bottom: 24px;
    min-height: 64px;
}

.settings-item .icon{
    height: 100%;   
}

.settings-item .icon img{
    height: 64px;   
}

.settings-item .description{
    width: 60%;   
    padding: 0px 24px 0px 24px;
}

.settings-item .description h3{
    margin: 0;   
}

.settings-item .description p{
    color: #ccc;\
    line-height: 1.2;
}


/* APP STORE
-------------------------------*/

.app-store{
    position: relative;
    height: 100%;
}

.app-store .all-apps{
    height: 320px;
    
}
.app-store .all-apps .app-block{
    padding: 20px 50px;
}

.app-store .app-tile{
    position: relative;
    float: left;
    margin: 30px 20px;
    width: 120px;
    height: 70px;
}

.app-store .installed::after{
    font-family: 'FontAwesome';
    font-size: 24px;
    content: "\F058";
    color: #fff;
    position: absolute;
    top: -16px;
    right: 20px;
}

.app-store .app-tile .app-icon{
    height: 64px;
    width: 64px;
    margin-right: 10px; 
}

.app-store .app-tile .app-icon img{
    height: 64px;
    width: 64px;
}

.app-store .app-tile .app-name{
    color: #fff;
    display: inline-block;
    overflow: hidden;
    width: 120px;
    height: 2.4em;
    line-height: 2em;
}


.app-details{
    padding: 30px 0px;
}

.app-details .main-title{
    margin: 0;
}

.app-details img{
    height: 120px;
    width: 120px;
    margin-bottom: 10px;
}

.app-details .price{
    font-size: 24px;
    
}

.app-details .technical-details{
    font-size: 16px;
    color: #bbb;
    font-style: italic;
}
.app-details .left{
    position: relative;
    float: left;
    width: 120px;

}
.app-details .right{
    position: relative;
    float: left;
    margin-left: 30px;    
    width: 570px;
    height: 280px;
    
}

.app-details .right a{
    color: #aaa;
}

.app-details .right ul{
    list-style: none;
    padding: 0;
}

.app-details .buttons{
    position: absolute;
    bottom: 20px;
    

}

.app-details .buttons *{
    margin-right: 20px;
}


/* UTILIES
-------------------------------*/


.title{
    line-height: .7;   
    margin-top: 0;
}

h2 span{
    
    font-size: 18px;
    color: #ccc;
    position: relative;
    margin-top: -200px;
}


.align-bottom{
    position: absolute;
    bottom: 0;
    width: 100%;
    line-height: 0;
}

.b-offset{
    bottom: 70px; 
}

.uppercase{
    text-transform: uppercase;
}

.gray-text{
    color: #ccc;   
}

.v-spacing{
    margin-top: 10px;   
    margin-bottom: 10px;
}
.v-spacing-double{
    margin-top: 20px;   
}

.clamp-text {
  position: relative;
  line-height: 1;
  height: 3em;
  overflow: hidden;
  color: #ccc;
}




/* LOGIN
-------------------------------*/

.login-page{
    padding: 20px;
}

.login-page .title h1{
    margin: 0;   
}
.login-page .title p{
    padding-left: 2px;
    color: #bbb;
}

.login-page .input-panel{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 300px;
}

.login-page .input-panel .panel-row{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    align-self: center;
}

.login-page .input-panel .panel-row *{
    width: 200px;   
}

.login-page .input-panel .panel-row input{
    background: transparent;   
    color: white;
    height: 60px;
    font-size: 36px;
    border: none;
}



/* OVERRIDES
-------------------------------*/

.container{
    width: 100%;
    
}

.tab-content{
    height: 100%;
    width: 100%;
}

.att-header{
    height: 60px;
    padding: 24px;
}

.carousel-content{
    display: block;
    
}

.att-carousel {
    position: relative;
    height: 100%;
}

.left .carousel-control{
    width: 30px;
}

.att-toggle-switch{
    display: block;
}

.att-slide{
    text-align: left;
}


.main-title {
    font-size: 36px;
    margin: 0;
    margin-top: 10px;
    line-height: 1;
}

.main-subtitle {
    font-size: 18px;
    color: #ccc;
    margin: 0;
}
